<!--book,user index.showのNew Book -->
<div class="col-md-3 new-book">
  <h2 class="mt-3">New book</h2>
    <%= form_with model: book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
      <div class="create-book"><%= f.submit 'Create Book', class: 'btn btn-sm btn-success create' %></div>
    <% end %>
</div>

<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3 user-info">
        <h2>User info</h2>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@book.user) do %>
            <i class="fas fa-user-cog edit"></i>
          <% end %>
        </div>
      </div>
      <div class="col-md-8 offset-md-1">
        <!-- Book detail -->
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @book.favorited_by?(current_user) %>
                <td>
                  <%= link_to book_favorites_path(@book), method: :delete do %>
                    <i class="fa-solid fa-heart destroy-heart"></i>
                  <% end %>
                  <%= @book.favorites.count %>
                </td>
                <td>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    <i class="fa-solid fa-heart create-heart"></i>
                  <% end %>
                  <%= @book.favorites.count %>
                </td>
              <% end %>
              <% if @book.user == current_user %>
                 <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                 <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <div><%= link_to @book.user.name, user_path(@book.user) %></div>
      </div>
      <div class="col-md-3 new-book">
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @new_book do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>
          <div class="create-book"><%= f.submit 'Create Book', class: 'btn btn-sm btn-success create' %></div>
        <% end %>
      </div>
    </div>
  </div>
</main>